<h1>Available Activities</h1>

<table>
  <tr>
    <th>Activity</th>
    <th></th>
    <th>Day</th>
    <th>Start Time</th>
    <th>Duration</th>
  </tr>
    <% for activity in @activities %>
  <tr>
    <td> <a href="/activity/<%= activity.id %>"><%= activity.activity_name %></a></td>
    <td>|</td>
    <td><%= activity.day %></td>
    <td><%= activity.start_time %></td>
    <td><%= activity.duration %></td>
    </tr>
    <% end %>
</table>

<div class="pagelink">
<li><a href="/activities/new">Create a new Actvity</a></li>
</div>
